generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Hero {
  id                  Int      @id @default(autoincrement())
  badge               String
  title               String
  subtitle            String
  description         String
  location            String
  imageUrl            String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  badgeEn             String?
  badgeNl             String?
  descriptionEn       String?
  descriptionNl       String?
  locationEn          String?
  locationNl          String?
  subtitleEn          String?
  subtitleNl          String?
  titleEn             String?
  titleNl             String?
  footerDescription   String?
  footerDescriptionEn String?
  footerDescriptionNl String?
}

model About {
  id                       Int      @id @default(autoincrement())
  title                    String
  description              String
  keyPoint1Title           String
  keyPoint1Text            String
  keyPoint2Title           String
  keyPoint2Text            String
  keyPoint3Title           String
  keyPoint3Text            String
  openingYear              String
  imageUrl                 String
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
  descriptionEn            String?
  descriptionNl            String?
  keyPoint1TextEn          String?
  keyPoint1TextNl          String?
  keyPoint1TitleEn         String?
  keyPoint1TitleNl         String?
  keyPoint2TextEn          String?
  keyPoint2TextNl          String?
  keyPoint2TitleEn         String?
  keyPoint2TitleNl         String?
  keyPoint3TextEn          String?
  keyPoint3TextNl          String?
  keyPoint3TitleEn         String?
  keyPoint3TitleNl         String?
  titleEn                  String?
  titleNl                  String?
  activities               String[]
  activitiesEn             String[]
  activitiesNl             String[]
  byBus                    String?
  byBusEn                  String?
  byBusNl                  String?
  byCar                    String?
  byCarEn                  String?
  byCarNl                  String?
  byTrain                  String?
  byTrainEn                String?
  byTrainNl                String?
  accessSubtitle           String?
  accessSubtitleEn         String?
  accessSubtitleNl         String?
  accessTitle              String?
  accessTitleEn            String?
  accessTitleNl            String?
  lastSectionDescription   String?
  lastSectionDescriptionEn String?
  lastSectionDescriptionNl String?
  lastSectionTitle         String?
  lastSectionTitleEn       String?
  lastSectionTitleNl       String?
  value1Desc               String?
  value1DescEn             String?
  value1DescNl             String?
  value1Title              String?
  value1TitleEn            String?
  value1TitleNl            String?
  value2Desc               String?
  value2DescEn             String?
  value2DescNl             String?
  value2Title              String?
  value2TitleEn            String?
  value2TitleNl            String?
  value3Desc               String?
  value3DescEn             String?
  value3DescNl             String?
  value3Title              String?
  value3TitleEn            String?
  value3TitleNl            String?
}

model Feature {
  id            Int      @id @default(autoincrement())
  icon          String
  title         String
  description   String
  order         Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  descriptionEn String?
  descriptionNl String?
  titleEn       String?
  titleNl       String?

  @@index([order])
}

model Room {
  id            Int            @id @default(autoincrement())
  name          String
  description   String
  price         String
  capacity      String
  rating        Int            @default(5)
  imageUrl      String
  features      String[]
  order         Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  bathroom      String?
  bedding       String?
  petsAllowed   Boolean        @default(true)
  price1Person  String?
  price2Persons String?
  price3Persons String?
  surface       String?
  bathroomEn    String?
  bathroomNl    String?
  beddingEn     String?
  beddingNl     String?
  capacityEn    String?
  capacityNl    String?
  descriptionEn String?
  descriptionNl String?
  nameEn        String?
  nameNl        String?
  surfaceEn     String?
  surfaceNl     String?
  bookingUrl    String?
  bookingUrlEn  String?
  bookingUrlNl  String?
  priceEn       String?
  priceNl       String?
  images        GalleryImage[]

  @@index([order])
}

model Testimonial {
  id         Int      @id @default(autoincrement())
  name       String
  location   String
  rating     Int      @default(5)
  text       String
  avatarUrl  String
  order      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  locationEn String?
  locationNl String?
  textEn     String?
  textNl     String?
}

model GalleryImage {
  id        Int      @id @default(autoincrement())
  url       String
  category  String
  title     String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roomId    Int?
  titleEn   String?
  titleNl   String?
  room      Room?    @relation(fields: [roomId], references: [id])

  @@index([roomId])
  @@index([category])
  @@index([order])
}

model Event {
  id            Int       @id @default(autoincrement())
  title         String
  description   String
  icon          String
  imageUrl      String
  capacity      String
  duration      String
  order         Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  date          DateTime?
  capacityEn    String?
  capacityNl    String?
  descriptionEn String?
  descriptionNl String?
  durationEn    String?
  durationNl    String?
  titleEn       String?
  titleNl       String?
}

model PageHero {
  id         Int      @id @default(autoincrement())
  page       String   @unique
  title      String
  subtitle   String
  imageUrl   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  subtitleEn String?
  subtitleNl String?
  titleEn    String?
  titleNl    String?
}

model HomeRoomSection {
  id            Int      @id @default(autoincrement())
  title         String
  titleEn       String?
  titleNl       String?
  titleItalic   String
  titleItalicEn String?
  titleItalicNl String?
  description   String
  descriptionEn String?
  descriptionNl String?
  imageUrl      String
  ctaText       String?
  ctaTextEn     String?
  ctaTextNl     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model GiftCardPage {
  id           Int      @id @default(autoincrement())
  introTitle   String
  introTitleEn String?
  introTitleNl String?
  introDesc    String
  introDescEn  String?
  introDescNl  String?
  imageUrl     String
  badgeText1   String
  badgeText1En String?
  badgeText1Nl String?
  badgeText2   String
  badgeText2En String?
  badgeText2Nl String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model GiftCardPackage {
  id            Int      @id @default(autoincrement())
  title         String
  titleEn       String?
  titleNl       String?
  description   String
  descriptionEn String?
  descriptionNl String?
  price         String
  priceEn       String?
  priceNl       String?
  icon          String
  isPopular     Boolean  @default(false)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SeminarPage {
  id           Int      @id @default(autoincrement())
  introTitle   String
  introTitleEn String?
  introTitleNl String?
  introDesc    String
  introDescEn  String?
  introDescNl  String?
  imageUrl     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model SeminarFeature {
  id            Int      @id @default(autoincrement())
  title         String
  titleEn       String?
  titleNl       String?
  description   String
  descriptionEn String?
  descriptionNl String?
  icon          String
  type          String
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SeminarPackage {
  id            Int      @id @default(autoincrement())
  title         String
  titleEn       String?
  titleNl       String?
  description   String
  descriptionEn String?
  descriptionNl String?
  price         String?
  details       String[]
  detailsEn     String[]
  detailsNl     String[]
  isRecommended Boolean  @default(false)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model NewsletterSubscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}
